<h1 id="users-index"><%= t("activerecord.attributes.user.users-index_page") %></h1>

<% if @users.any? %>
  <table id="user-table">
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.user.name") %></th>
        <th><%= t("activerecord.attributes.user.email") %></th>
        <th><%= t("activerecord.attributes.user.admin") %></th>
        <th><%= t("activerecord.attributes.user.task_total") %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.includes(:tasks).each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? t("activerecord.attributes.user.true") : t("activerecord.attributes.user.false") %></td>
          <td><%= user.task_total %></td>
          <td><%= link_to t("show"), admin_user_path(user), class: "show-user" %></td>
          <td><%= link_to t("edit"), edit_admin_user_path(user), class: "edit-user" %></td>
          <td><%= link_to t("destroy"), admin_user_path(user), method: :delete, data: { confirm: t("are_you_sure") }, class: "destroy-user" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません。</p>
<% end %>