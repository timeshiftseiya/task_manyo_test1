<h1><%= t("user-sign-up-page") %></h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
  </div>
<% end %>

<%= form_with(url: admin_users_path, model: @user, local: true) do |f| %>
  <%= f.label :name, t("name") %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email, t("email") %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password, t("password") %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, t("password_confirmation") %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.label :admin, t("admin") %><br>
  <%= f.check_box :admin %><br><br>
  <%= f.submit t("create-user"), id: "create-user" %><br>
  <%= link_to t("back"), admin_users_url, id: "back"  %>
<% end %>